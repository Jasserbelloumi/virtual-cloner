<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <fragment android:name="com.google.android.gms.maps.MapFragment" android:id="@+id/map_fragment" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <com.skyfishjy.library.RippleBackground android:id="@+id/ripple_bg" android:layout_width="match_parent" android:layout_height="match_parent" app:rb_color="#2355d2" app:rb_duration="2000" app:rb_radius="14dp" app:rb_rippleAmount="4" app:rb_scale="6">
        <ImageView android:id="@+id/ic_pin" android:visibility="invisible" android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/ic_pin" android:layout_centerInParent="true" android:translationY="-18dp"/>
    </com.skyfishjy.library.RippleBackground>
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:layout_alignParentBottom="true" android:layout_marginStart="14dp" android:layout_marginEnd="14dp" android:elevation="5dp" app:cardCornerRadius="9dp" app:contentPadding="8dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/small_pin" android:visibility="visible" android:layout_width="18dp" android:layout_height="18dp" android:src="@drawable/ic_pin"/>
                <ProgressBar android:id="@+id/progress_bar" android:visibility="gone" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
                <multispace.multiapp.clone.view.pro.location.map.utils.CustomTextView android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" android:textSize="16sp" android:textColor="@android:color/primary_text_light" android:gravity="center_horizontal" android:id="@+id/tv_display_marker_location" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="5dp" android:paddingEnd="5dp"/>
            </LinearLayout>
            <multispace.multiapp.clone.view.pro.location.map.utils.CustomButton android:textStyle="bold" android:textColor="@android:color/white" android:layout_gravity="center" android:id="@+id/submit_location_button" android:background="@drawable/small_button_shape" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" android:text="@string/confirm_location" android:textAllCaps="false" android:elevation="2dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
